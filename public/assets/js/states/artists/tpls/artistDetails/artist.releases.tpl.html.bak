<section class="pr mcl mr350">
	<div class="ip2">
		<div ng-repeat="albums in artistReleases.releases" style="margin-bottom:10px;">
			<div class="tl pure66list fr">
				<div class="ip9">
					<h2 ng-repeat="title in albums.title track by $index">{{title}}</h2>
					<h4 ng-if="albums.releaseDate">
						<time>{{albums.releaseDate | trimYear}}</time>					
					</h4>
					<h4 ng-if="!albums.releaseDate">
						<time>{{albums.digitalReleaseDate | trimYear}}</time>	
					</h4>
				</div>
				<ol>
					<li ng-repeat="track in albums.tracks track by $index">{{track.title}}
						<span>{{track.lenght | trimTrack}}</span>
					</li>
				</ol>			
			</div>	
			<div class="c tlalbum pure33 fl">        
				<article>

					<img class="lazyload" ng-if="albums.cover" ng-src="{{albums.cover}}" alt="på MusikDK">

					<img class="lazyload" ng-if="!albums.cover" ng-src="/assets/images/noimage.jpg" />
				</article> 
			</div>		
			<div class="clear"></div>	
		</div>						

		
	</div>	
</section>
<section class="cr2 w350">						
	<header class="h">
		<h2>Afspil på:</h2>
	</header>
		<div class="ip">
			<div ng-repeat="service in artistReleases.services">
				<a ng-if="service.name == 'Spotify'" href="{{service.link}}" target="_blank"><button class="btnspotify">&nbsp;</button></a>
				<a ng-if="service.name == 'Itunes'" href="{{service.link}}" target="_blank"><button class="btnitunes">&nbsp;</button></a>
				<a ng-if="service.name == 'Deezer'" href="{{service.link}}" target="_blank"><button class="btndeezer">&nbsp;</button></a>
			</div>
		</div>
</section>